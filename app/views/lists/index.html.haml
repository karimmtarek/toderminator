- if current_user
  .row
    .col-md-12
      .page-header
        %h1
          %span(class="glyphicon glyphicon-th-list")
          = current_user.user_name
          's To-do Lists
          %span(class="label label-info")
            = pluralize(@lists.size, 'List')

  = render 'form'

  = render partial: 'list', collection: @lists
- else
  .row
    .col-md-12
      %p= @message