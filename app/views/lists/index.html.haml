- if current_user
  .row
    .col-md-12
      .page-header
        %h1
          %span(class="glyphicon glyphicon-th-list")
          = current_user.user_name
          's To-do Lists
          %small you've got #{@lists.size} of 'em

  = render 'form'

  = render partial: 'list', collection: @lists
- else
  .row
    .col-md-12
      %p you can't see this.